          | Text
      a(href='').list-group-item.list-group-item-action.d-flex.align-items-center
        +svg-icon('clock')(class='icon-black-200')
        .list-group-item-text.text-truncate
          | Text
      a(href='').list-group-item.list-group-item-action.d-flex.align-items-center.disabled
        +svg-icon('exit')(class='icon-black-200')
        .list-group-item-text.text-truncate
          | Text

