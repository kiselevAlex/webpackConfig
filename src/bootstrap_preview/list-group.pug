extends ../layouts/empty/empty

block params
  - var title = "List group";

block content
  .container
    h1= title

    h2
      | Basic example

    .list-group
      a(href='').list-group-item.list-group-item-action.active
        | Text
      a(href='').list-group-item.list-group-item-action
        | Text
      a(href='').list-group-item.list-group-item-action
        | Text
      a(href='').list-group-item.list-group-item-action
        | Text
      a(href='').list-group-item.list-group-item-action.disabled
        | Text

    h2
      | With icons

    .list-group(style='max-width: 320px; padding-bottom: 16px;')
      a(href='').list-group-item.list-group-item-action.d-flex.align-items-center.active
        +svg-icon('at')(class='icon-black-200')
        .list-group-item-text.text-truncate
          | Text
      a(href='').list-group-item.list-group-item-action.d-flex.align-items-center
        +svg-icon('advert')(class='icon-black-200')
        .list-group-item-text.text-truncate
          | Teeeeeeeeeeeeeeeeeext veryyyy long
      a(href='').list-group-item.list-group-item-action.d-flex.align-items-center
        +svg-icon('calendar')(class='icon-black-200')
