extends ../layouts/empty/empty

block params
  - var title = "Grid system";

block content
  .container
    h1= title
    .row(style="margin-top: 16px;")
      -for (var i=0; i<24; ++i)
        .col-1
          div(style="border: 1px solid #000;")
            | 1
    .row(style="margin-top: 16px;")
      -for (var i=0; i<12; ++i)
        .col-2
          div(style="border: 1px solid #000;")
            | 2
    .row(style="margin-top: 16px;")
      -for (var i=0; i<8; ++i)
        .col-3
          div(style="border: 1px solid #000;")
            | 3
    .row(style="margin-top: 16px;")
      -for (var i=0; i<6; ++i)
        .col-4
          div(style="border: 1px solid #000;")
            | 4
    .row(style="margin-top: 16px;")
      -for (var i=0; i<4; ++i)
        .col-6
          div(style="border: 1px solid #000;")
            | 6
    .row(style="margin-top: 16px;")
      -for (var i=0; i<3; ++i)
        .col-8
          div(style="border: 1px solid #000;")
            | 8
    .row(style="margin-top: 16px;")
      -for (var i=0; i<2; ++i)
        .col-12
          div(style="border: 1px solid #000;")
            | 12
    .row(style="margin-top: 16px;")
      -for (var i=0; i<1; ++i)
        .col-24
          div(style="border: 1px solid #000;")
            | 24
